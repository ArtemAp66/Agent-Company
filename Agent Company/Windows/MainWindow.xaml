<Window x:Class="Agent_Company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agent_Company"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="80*"/>
			<RowDefinition Height="70*"/>
			<RowDefinition Height="70*"/>
			<RowDefinition Height="363*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="161*"/>
		</Grid.ColumnDefinitions>
		<Rectangle Fill="#FF26323A" Grid.Column="1" Grid.RowSpan="4"/>
		<Image x:Name="mainImage" Grid.Column="0" Source="/Agent Company;component/Image/logo.png" Grid.Row="0" Margin="5"/>
		<Button Content="Авторизация" Grid.Row="1" BorderBrush="White" Background="White" FontFamily="/Agent Company;component/Fonts/#Roboto" FontSize="18" Foreground="#FF3AA1FC" Click="Button_Click"/>
		<Button Content="Регистрация" Grid.Row="2" BorderBrush="White" Background="White" FontFamily="/Agent Company;component/Fonts/#Roboto" FontSize="18" Foreground="#FF3AA1FC" Click="Button_Click_1"/>
		<Frame  Grid.Column="1" Grid.RowSpan="4" Name="AutirizationPage" NavigationUIVisibility="Hidden"/>
	</Grid>
</Window>
